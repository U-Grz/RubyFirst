<h1>Sign Up</h1>

<%= form_with model: @user, url: users_path do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= link_to "Login", new_session_path %>
